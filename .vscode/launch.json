{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "xdebugSettings": {
        "max_children": 256,
        "max_data": 512,
        "max_depth": 3,
        "show_hidden": 1
      },
      "pathMappings": {
        //"caminho-no-container": "caminho-na-maquina-host"
        "/shared/httpd/cadusite": "/docker/devilbox/data/www/cadusite"
      }
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    }
  ]
}
